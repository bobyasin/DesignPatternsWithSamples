@model List<AppUser>
@{
    ViewData["Title"] = "Home Page";
    int counter = 0;
}
<div class="text-center">

    @foreach (AppUser user in Model)
    {
        counter++;
        if (counter == 1 || counter % 5 == 1)
        {
            @Html.Raw("<div class='row row-cols- 1 row-cols-md-5 g-4'>")
        }

        <div class="col">
            <user-card app-user="@user"></user-card>
        </div>

        if (counter % 5 == 0)
        {
            @Html.Raw("</div>");
        }
    }
</div>
